model Palpite {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  jogoId    Int
  placarCasa Int
  placarFora Int
  createdAt DateTime @default(now())

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  jogo      Jogo     @relation(fields: [jogoId], references: [id])
}

model Usuario {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  palpites  Palpite[] // Este campo define a relação inversa com o modelo Palpite
}


model Jogo {
  id          Int       @id @default(autoincrement())
  timeCasa    String
  timeFora    String
  data        DateTime
  palpites    Palpite[] // Este campo define a relação inversa com o modelo Palpite
}

// Definição do datasource (banco de dados)
datasource db {
  provider = "postgresql"  // Ou o banco que você estiver usando, como "mysql" ou "sqlite"
  url      = env("DATABASE_URL")  // A URL de conexão do banco de dados
}

// Definição do gerador (geração do cliente Prisma)
generator client {
  provider = "prisma-client-js"
}
